@model dotnet_mvc_expense_tracker.Models.Budget

@{
    ViewData["Title"] = "Detail Budget";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Detail Budget: @Model.Nama</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nama</dt>
            <dd class="col-sm-9">@Model.Nama</dd>

            <dt class="col-sm-3">Kategori</dt>
            <dd class="col-sm-9">@Model.Kategori?.Nama</dd>

            <dt class="col-sm-3">Total Budget</dt>
            <dd class="col-sm-9">@Model.TotalBudget.ToString("C", new System.Globalization.CultureInfo("id-ID"))</dd>

            <dt class="col-sm-3">Periode</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("dd MMMM yyyy") - @Model.EndDate.ToString("dd MMMM yyyy")</dd>

            <dt class="col-sm-3">Deskripsi</dt>
            <dd class="col-sm-9">@Model.Deskripsi</dd>

            <dt class="col-sm-3">Diulang?</dt>
            <dd class="col-sm-9">@(Model.IsRepeat ? "Ya" : "Tidak")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Kembali ke List</a>
    </div>
</div>