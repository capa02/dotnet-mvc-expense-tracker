@model dotnet_mvc_expense_tracker.Models.Budget

@{
    ViewData["Title"] = "Edit Budget";
}

<div class="card card-warning">
    <div class="card-header">
        <h3 class="card-title">Form Edit Budget</h3>
    </div>
    <form asp-action="Edit">
        @* Jangan lupa tambahkan input Id tersembunyi *@
        <input type="hidden" asp-for="Id" />

        <div class="card-body">
            <div class="form-group">
                <label asp-for="KategoriId"></label>
                <select asp-for="KategoriId" class="form-control" asp-items="@((SelectList)ViewData["KategoriList"])">
                    <option value="">-- Pilih Kategori --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Nama"></label>
                <input asp-for="Nama" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="TotalBudget"></label>
                <input asp-for="TotalBudget" type="number" class="form-control">
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="StartDate"></label>
                        <input asp-for="StartDate" type="date" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="EndDate"></label>
                        <input asp-for="EndDate" type="date" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Deskripsi"></label>
                <textarea asp-for="Deskripsi" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group form-check">
                <input asp-for="IsRepeat" type="checkbox" class="form-check-input">
                <label class="form-check-label" asp-for="IsRepeat"></label>
            </div>
            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Batal</a>
        </div>
    </form>
</div>