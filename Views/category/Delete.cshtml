@model dotnet_mvc_expense_tracker.Models.Budget

@{
    ViewData["Title"] = "Hapus Budget";
}

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Konfirmasi Hapus</h3>
    </div>
    <div class="card-body">
        <h4>Apakah Anda yakin ingin menghapus budget "@Model.Nama"?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Kategori</dt>
            <dd class="col-sm-9">@Model.Kategori?.Nama</dd>

            <dt class="col-sm-3">Total Budget</dt>
            <dd class="col-sm-9">@Model.TotalBudget.ToString("C", new System.Globalization.CultureInfo("id-ID"))</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Hapus" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Batal</a>
        </form>
    </div>
</div>